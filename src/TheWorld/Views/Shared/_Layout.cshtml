<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8" />
    <title>The World - @ViewBag.Title</title>

    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body>

    <div id="sidebar">
        <img src="~/img/user1.jpg" alt="headshot" class="headshot" />
        <span id="username">
            Brucie Willies
        </span>
        <ul class="menu">
            <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
            <li><a asp-controller="App" asp-action="About">About</a></li>
            <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
        </ul>
    </div>

    <div id="wrapper">
        <div id="main">
            <div>
                <button id="sidebarToggle">Toggle</button>
            </div>

            <div>
                @RenderBody()
            </div>

        </div>

        <div id="footer">
            &copy; 2015 The World Ltd.
        </div>

        <!-- JavaScript libs -->
        <script src="~/lib/jquery/dist/jquery.min.js"></script>

        <!-- Side specific JaveScript -->
        <script src="~/js/side.js"></script>

        @RenderSection("Scripts", false)

    </div>

</body>

</html>